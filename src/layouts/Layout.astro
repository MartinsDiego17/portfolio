---
const { title } = Astro.props;
import "@fontsource/questrial";
import "../styles/global.css";
import { info_metadata } from "../data/info_metadata";
const { description, author, ogDescription, ogImage, ogTitle, ogType } =
	info_metadata;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<meta name="description" content={description} />
		<meta name="author" content={author} />
		<meta name="og:title" content={ogTitle} />
		<meta name="og:description" content={ogDescription} />
		<meta name="og:image" content={ogImage} />
		<meta name="og:type" content={ogType} />

		<meta
			name="description"
			content="Diego Martins, software developer Full Stack, creando aplicaciones web modernas y escalables con React, Next.js y Node.js."
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--ultra-dark: #00000f;
		--dark: #17002f;
		--semidark: #2d005e;
		--normal: #ff0059;
		--creme: #c292f8;
	}

	/* 	:root {
		--ultra-dark: #060700;
		--dark: #232b00;
		--semidark: #404d00;
		--normal: #d4ff00;
		--creme: #f7ffcf;
	} */
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Questrial", sans-serif;
		background-color: var(--ultra-dark);
		background-image: url(../../public/pics/body.webp);
		background-attachment: fixed;
		scroll-behavior: smooth;
	}

	html {
		overflow-x: hidden;
	}

	body button {
		border-radius: 10px;
		padding: 8px 16px;
	}

	@keyframes reveal {
		0% {
			translate: 0 100px;
			transform: scale(0.5);
			opacity: 0;
		}
		100% {
			translate: 0 0;
			transform: scale(1);
			opacity: 1;
		}
	}
	#experience,
	#projects,
	#about,
	#stack {
		animation-name: reveal;
		animation-duration: 1s;
		animation-timing-function: ease-in-out;
		animation-fill-mode: both;
		view-timeline-name: --experience-timeline;
		view-timeline-axis: block;
		animation-timeline: --experience-timeline;
		animation-range: entry 20% cover 30%;
	}

	::-webkit-scrollbar {
		background-color: transparent;
		width: 5px;
	}
	::-webkit-scrollbar-thumb {
		background-color: var(--normal);
		border-radius: 5px;
	}
</style>
