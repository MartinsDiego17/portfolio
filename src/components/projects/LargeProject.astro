---
const { img, title, description, stack, type, deploy_link, variant } =
    Astro.props;
import Card from "../Card.astro";
import Link from "../icons/Link.astro";
import WorldIcon from "../icons/WorldIcon.astro";
---

<Card className="large">
    <section class="flex">
        <article
            class="pl-[2em] flex flex-col justify-center details-large-card"
        >
            <h2 class="text-(--normal) flex place-items-center gap-x-2">
                <span>{title}</span>
                {
                    deploy_link && (
                        <span class="text-blue-400">
                            <WorldIcon />
                        </span>
                    )
                }
            </h2>
            <p class="w-9/10 text-[#ccc] leading-5 text-[15px] text-balance">
                {description}
            </p>
            <div class="mt-5 flex gap-x-3">
                {
                    stack.map((tech: string) => (
                        <span class="text-(--normal) text-[12px]">{tech}</span>
                    ))
                }
            </div>
            {
                deploy_link && (
                    <div class="w-fit mt-2">
                        <a
                            class="button-site"
                            href={deploy_link}
                            target="_blank"
                        >
                            <span>
                                <Link />
                            </span>
                            <span>Visitar sitio</span>
                        </a>
                    </div>
                )
            }
        </article>
        <article class="image-large-card">
            <img src={img} alt={title} />
        </article>
    </section>
</Card>

<style is:global>
    section {
        height: 100%;
    }
    section .details-large-card {
        width: 60%;
    }
    section .image-large-card {
        display: flex;
        width: 40%;
        align-items: center;
    }
    .card.large .button-site {
        opacity: 0;
        transform: translateX(0px);
    }
    .card.large:hover .button-site {
        opacity: 1;
        transform: translateX(10px);
    }
</style>
