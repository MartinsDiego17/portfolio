---
const { min_width, className } = Astro.props;
---

<div class={`card ${min_width && "card_job"} ${className && className}`}>
    <slot />
</div>

<style>
    @keyframes bord {
        0% {
            bottom: calc(100% - 0.6em);
            left: calc(0% - 2px);
        }
        24% {
            bottom: 0.6em;
            left: calc(0% - 2px);
        }
        25% {
            bottom: 0.2em;
            left: 0.2em;
        }
        26% {
            bottom: calc(0% - 2px);
            left: 0.6em;
        }
        49% {
            bottom: calc(0% - 2px);
            left: calc(100% - 0.6rem);
        }
        50% {
            bottom: 0.2em;
            right: 0.2em;
        }
        51% {
            bottom: 0.6em;
            left: calc(100% - 2px);
        }
        74% {
            bottom: calc(100% - 0.6em);
            left: calc(100% - 2px);
        }
        75% {
            bottom: calc(100% - 0.2em);
            righ: 0.2em;
        }
        76% {
            bottom: calc(100% - 2px);
            left: calc(100% - 0.6em);
        }
        98% {
            bottom: calc(100% - 2px);
            left: 0.6em;
        }
        99% {
            bottom: calc(100% - 0.2rem);
            left: 0.2rem;
        }
        100% {
            bottom: calc(100% - 0.6em);
            left: 2px;
        }
    }
    .card {
        position: relative;
        height: fit-content;
        padding: 2em;
        border-radius: 1em;
        margin: 0 auto;
        display: block;
        text-align: start;
        transition: 1.3s;
        border: 1px solid #151515;
        margin-bottom: 50px;
        background-color: rgba(14, 0, 5, 0.5);
    }
    .card:hover {
        border-color: var(--normal);
    }
    .card:hover::before {
        content: "";
        position: absolute;
        bottom: 0;
        left: -1px;
        width: 4px;
        height: 4px;
        border-radius: 50%;
        background: #fc7e44;

        box-shadow:
            0px 0px 10px 3px var(--normal),
            0px 0px 25px 6px var(--normal),
            0px 0px 40px 10px var(--dark);
        animation: bord 7s linear infinite;
    }

    .card_job {
        width: 45vw;
    }
    @media (max-width: 430px) {
        .card_job {
            width: 90vw;
        }
    }
</style>
